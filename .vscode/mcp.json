{
    "servers": {
        "nsforge-mcp": {
            "type": "stdio",
            "command": "uv",
            "args": [
                "run",
                "--directory",
                "${workspaceFolder}",
                "nsforge-mcp"
            ]
        },
        "sympy-mcp": {
            "type": "stdio",
            "command": "uv",
            "args": [
                "run",
                "--with",
                "mcp[cli]",
                "--with",
                "pydantic",
                "--with",
                "sympy",
                "--with",
                "einsteinpy",
                "mcp",
                "run",
                "${workspaceFolder}/vendor/sympy-mcp/server.py"
            ]
        }
    }
}
